{
  "name": "nature-ui",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "src/*"
    ],
    "nohoist": [
      "packages/apps/**/webpack-dev-server"
    ]
  },
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "license": "MIT",
  "scripts": {
    "update:check": "ncu",
    "update": "ncu -u",
    "prepare": "husky install .config/husky",
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "contributors:add": "all-contributors add",
    "contributors:gen": "all-contributors generate",
    "members:gen": "ts-node scripts/all-members.ts",
    "search-meta:gen": "ts-node scripts/get-search-meta.ts",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn build && yarn storybook",
    "lint": "lerna run lint --no-private --stream",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "test": "lerna run test --no-private --stream",
    "build": "lerna run build --ignore @nature-ui/test-utils --no-private --stream",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build:tailwind": "postcss ./.storybook/style.css -o ./.storybook/tailwind.css",
    "storybook": "env NODE_ENV=development start-storybook -p 4000",
    "commit": "cz",
    "prettier": "prettier --write \"**/*.{ts,tsx,json,md,yml}\"",
    "prerelease": "yarn build",
    "v-release": "lerna run v-pub",
    "build:storybook": "build-storybook && sb extract",
    "release": "changeset publish",
    "docs": "yarn workspace @nature-ui/docs",
    "docs:build": "yarn docs build",
    "docs:dev": "yarn docs dev",
    "docs:start": "yarn docs start"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.17.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@manypkg/cli": "^0.18.0",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.14",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/autoprefixer": "^10.2.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "@types/postcss-import": "^12.0.1",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "all-contributors-cli": "^6.20.0",
    "autoprefixer": "^10.3.4",
    "babel-preset-react-app": "^10.0.0",
    "classnames": "^2.3.1",
    "clsx": "^1.1.1",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.3.0",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.3",
    "execa": "^5.1.1",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "node-sass": "^6.0.1",
    "npm-check-updates": "^11.8.5",
    "postcss": "^8.3.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "postcss-mixins": "^8.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-docgen-typescript": "^2.1.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.14.0",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.3.0",
    "rimraf": "^3.0.2",
    "storybook": "^6.4.14",
    "style-loader": "^3.2.1",
    "tailwindcss": "^3.0.15",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/builder-webpack5": "^6.4.14",
    "@storybook/manager-webpack5": "^6.4.14"
  }
}
